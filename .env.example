# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
# Full MongoDB connection string (without database name)
MONGODB_URI=
# Database name (optional, defaults to recognito)
MONGODB_DB_NAME=

# JWT Authentication
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=
# Token expiration time (optional, defaults to 24h)
JWT_EXPIRES_IN=24h

# Google Sheets Configuration
# Required: Google Sheets ID for user login/authentication
# Found in spreadsheet URL: https://docs.google.com/spreadsheets/d/SPREADSHEET_ID/edit
# This spreadsheet contains user credentials and configuration
LOGIN_SPREADSHEET_ID=

# Optional: Google Sheets IDs (can also be configured in Google Sheets Config tab)
# These are used for storing application data in Google Sheets
KANBAN_BOARD_SPREADSHEET_ID=
NOTES_SPREADSHEET_ID=
